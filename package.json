{
  "name": "lovas-political-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run validate:env && npm run compress-videos:check && next build",
    "build:no-compress": "npm run validate:env && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "jest --json --outputFile=test-report.json && node scripts/generate-test-report.js",
    "validate:env": "node src/scripts/validate-env.js",
    "validate:production": "NODE_ENV=production npm run validate:env",
    "deploy:check": "npm run validate:production && npm run build && npm run test",
    "compress-video": "node scripts/compress-video.js",
    "compress-videos": "node scripts/compress-all-videos.js",
    "compress-videos:check": "node scripts/check-and-compress-videos.js",
    "compress-videos:production": "NODE_ENV=production node scripts/compress-all-videos.js",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "npm run seed",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "ready:check": "curl -f http://localhost:3000/api/ready || exit 1",
    "test:db": "node src/scripts/test-database.js",
    "test:db:api": "curl -f http://localhost:3000/api/test-db || exit 1"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@hello-pangea/dnd": "^17.0.0",
    "@prisma/client": "^5.10.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@shadcn/ui": "^0.0.4",
    "@tiptap/extension-text-align": "^2.10.4",
    "@tiptap/extension-underline": "^2.10.4",
    "@tiptap/pm": "^2.10.4",
    "@tiptap/react": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "isomorphic-dompurify": "^2.25.0",
    "lucide-react": "^0.469.0",
    "next": "^15.1.7",
    "next-auth": "^4.24.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^4.0.1",
    "sharp": "^0.34.2",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@swc/core": "^1.10.16",
    "@swc/jest": "^0.2.37",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.18",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-esm-transformer": "^1.0.0",
    "postcss": "^8.4.35",
    "prisma": "^5.10.0",
    "sonner": "^1.7.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
